<resources>

  <!-- Base application theme. -->
  <style name="AppTheme.Recommendation" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/red</item>
    <item name="colorPrimaryDark">@color/red</item>
    <item name="colorAccent">@color/red</item>
  </style>

  <style name="AppTheme.Recommendation.NoActionBar">
    <item name="colorPrimary">@color/red</item>
    <item name="colorPrimaryDark">@color/red</item>
    <item name="windowActionBar">true</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.Recommendation.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.Recommendation.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
